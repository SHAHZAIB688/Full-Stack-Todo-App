<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Todo App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#8E62A5',
                        accent: '#10AEEE'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-100 font-sans flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <!-- Header -->
        <h1 class="text-3xl font-bold text-primary text-center mb-6">Login to Todo App</h1>
        <p class="text-gray-500 text-center mb-6">Enter your credentials to access your tasks and stay productive</p>

        <!-- Form -->
        <form action="/login/create" method="POST" class="space-y-6">
            <!-- Email -->
            <div class="relative">
                <input type="email" name="email" id="email" required
                    class="peer w-full px-4 py-3 border rounded-lg outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-all"
                    placeholder="Email">
                <label for="email"
                    class="absolute left-4 top-3 text-gray-400 text-sm peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-base peer-focus:top-0 peer-focus:text-accent peer-focus:text-sm transition-all">Email</label>
            </div>

            <!-- Password -->
            <div class="relative">
                <input type="password" name="password" id="password" required
                    class="peer w-full px-4 py-3 border rounded-lg outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-all"
                    placeholder="Password">
                <label for="password"
                    class="absolute left-4 top-3 text-gray-400 text-sm peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-400 peer-placeholder-shown:text-base peer-focus:top-0 peer-focus:text-accent peer-focus:text-sm transition-all">Password</label>
            </div>

            <!-- Forgot password -->
            <div class="text-right">
                <a href="/forgot-password" class="text-sm text-accent hover:underline">Forgot Password?</a>
            </div>

            <!-- Submit Button -->
             <a href="/auth/google">
                <button type="button"
                    class="w-full flex items-center justify-center gap-3 bg-white py-3 rounded-lg font-semibold text-gray-500 hover:bg-gray-200 transition-all">
                    <img src="/images/google.png" alt="Google logo" class="w-6 h-6" />
                    <span>Continue with Google</span>
                </button>
            </a>
            <button type="submit" class="w-full bg-accent text-white py-3 rounded-lg font-semibold hover:bg-primary transition-all">LogIn</button>
        </form>

        <!-- Sign Up Redirect -->
        <p class="text-center text-gray-500 mt-6">
            Don't have an account?
            <a href="/signup" class="text-accent font-semibold hover:underline">Sign Up</a>
        </p>
    </div>
</body>

</html>